@model List<SistemaCadastroBalanço.database.Cadastros.Clientes>

@{
    ViewBag.Title = "Lista";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        .table-row-clickable:hover {
            cursor: pointer;
        }

        .table-row-highlight {
            background-color: lightgray /* Cor de destaque desejada */
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Lista de clientes</h2>
        <p>
            <a href="@Url.Action("Criar")" class="btn btn-outline-success">Novo Cadastro</a>
        </p>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Nome
                    </th>
                    <th>
                        Pet
                    </th>
                    <th>
                        Idade do Pet
                    </th>
                    <th>
                        Cel
                    </th>
                    <th>
                        Obs
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="@item.idCliente" class="table-row-clickable">
                        <td>
                            @Html.DisplayFor(modelItem => item.idCliente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cliente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.pet)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.idadepet)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.observacoes)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.idCliente })" class="btn btn-outline-primary">Editar</a>
                            <a href="@Url.Action("Details", new { id = item.idCliente })" class="btn btn-outline-info">Detalhes</a>
                            <a href="@Url.Action("ViewDelete", new { id = item.idCliente })" class="btn btn-outline-danger">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script>
        $(document).ready(function () {
            $(".table-row-clickable").click(function () {
                // Remover a classe de destaque de todas as linhas, exceto a que foi clicada
                $(".table-row-clickable").not(this).removeClass("table-row-highlight");

                // Alternar a classe de destaque na linha clicada
                $(this).toggleClass("table-row-highlight");
                
                var editId = $('.table-row-highlight')[0].id;
                window.location = "/Cliente/Edit?id="+editId;
            });
        });
    </script>
</body>
</html>
